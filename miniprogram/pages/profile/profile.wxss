/* miniprogram/pages/profile/profile.wxss */
page{
  background-color: rgb(246,246, 246);
}
.firstlogin{
  font-size: 14pt;
  width: 10rpx;
  margin: 10rpx;
  border: 0;
  /* background: rgba(52,152,219, 0.171); */
  color: rgb(128, 128, 128);
  /* border: 4rpx solid rgba(52,152,219, 0.571); */
  padding: 10rpx 10rpx;
  outline: none;
  border-radius: 100%;
  transition: 0.25s;
  text-align: center;
}
.myOrder{
  display: flex;
}
.myOrder1{
  width: 25%;
  margin: 10rpx;
  border: 0;
  background: rgba(52,152,219, 0.071);
  /* border: 4rpx solid rgba(52,152,219, 0.571); */
  padding: 10rpx 60rpx;
  outline: none;
  border-radius: 20%;
  transition: 0.25s;
  text-align: center;
  font-size: 14pt;
  font-weight: 400;
  color: rgba(128, 128, 128,0.5);
}
.myOrder1:hover{
  background: rgba(46, 204, 112, 0.171);
}
.schoolInfo:hover{
  background: rgba(46, 204, 112, 0.171);
}
.schoolInfo{
  font-size: 40rpx;
  width: 10rpx;
  margin: 10rpx;
  border: 0;
  background: rgba(52,152,219, 0.071);
  color: rgba(52,152,219, 0.271);
  letter-spacing:60rpx;
  /* border: 4rpx solid rgba(52,152,219, 0.571);  */
  padding: 10rpx 10rpx;
  outline: none;
  border-radius: 50rpx;
  transition: 0.25s;
  text-align: center;
}
.userinfo-nickname{
  position: relative;
}
.userinfo-gender{
  position: absolute;
  left: 360rpx;
}
.userinfo-area{
  position: absolute;
  left: 200rpx;
}
.school{
  font-size: 40rpx;
  width: 10rpx;
  margin: 10rpx;
  border: 0;
  background: rgba(52,152,219, 0.071);
  color: rgba(52,152,219, 0.271);

  /* border: 4rpx solid rgba(52,152,219, 0.571);  */
  padding: 10rpx 10rpx;
  outline: none;
  border-radius: 50rpx;
  transition: 0.25s;
  text-align: center;
}

